# vim: set filetype=sh :
export ZALIASES="$ZDOTDIR/zsh_aliases"

alias ez="nvim $ZDOTDIR/.zshrc"
alias eze="nvim $HOME/.zshenv"
alias eza="nvim $ZALIASES"
alias zdir="$ZDOTDIR"
alias pl="mpc play"
alias ps="mpc pause"
alias nx="mpc next"
alias pv="mpc prev"
alias plr="ncmpcpp"
alias dir="ls"
alias clear="clear && screenfetch"
alias q="exit"
alias c=clear
alias r="source $HOME/.zshenv; c"
alias ga="git add"
alias gc="git commit -m ${}"
alias gp="git push ${} -u ${}"
alias gdr="$HOME/git/"
alias gc="git clone"
alias dconfig='cd $XDG_CONFIG_HOME'
alias enr="nvim $XDG_CONFIG_HOME/nvim/init.vim"
alias enb="nvim $XDG_CONFIG_HOME/nvim/bindings.vim"
alias enbs="nvim $XDG_CONFIG_HOME/nvim/backstage.vim"
alias enp="nvim $XDG_CONFIG_HOME/nvim/plugins.vim"
alias type=gtypist
alias install="sudo emerge -av ${}"
alias search="emerge -s ${}"
alias uninst="sudo emerge --unmerge ${}"
